[Unit]
Description=gas - grundstein api service
Documentation=https://docs.grundstein.it/gas
After=network.target

[Service]
Type=simple
User=grundstein
ExecStart=/usr/bin/gas
Restart=on-failure
StandardOutput=/var/log/gas/access.log
StandardError=/var/log/gas/error.log

[Install]
WantedBy=multi-user.target
